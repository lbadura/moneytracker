<%= error_messages_for :account %>
<% form_for :account, :url => accounts_path, :class => 'mt_form' do |f| -%>
  <fieldset>
    <ol>
      <li>
      <label for="name">Name</label>
      <%= f.text_field :name %>
      </li>
      <li>
      <label for="iban">IBAN</label>
      <%= f.text_field :iban %>
      </li>
      <li>
      <label for="number">Alternative number</label>
      <%= f.text_field :number %>
      </li>
      <li>
      <label for="Owner">Owner's name</label>
      <%= f.text_field :owner %>
      </li>
      <li>
      <%= submit_tag 'Add account', :id => 'add-account-button' %>
      </li>
    </ol>
  </fieldset>
<% end %>
